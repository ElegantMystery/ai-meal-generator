# Copy this file to .env and fill in your values.
# NEVER commit .env to git.

# PostgreSQL (local dev — matches docker-compose.yml service name)
DATABASE_URL=postgresql://meal_user:YOUR_DB_PASSWORD@postgres-mealgen:5432/mealgen
POSTGRES_PASSWORD=YOUR_DB_PASSWORD

# OpenAI
OPENAI_API_KEY=sk-proj-...

# Shared secret between backend and RAG service (generate a strong random value)
RAG_SHARED_SECRET=

# Google OAuth2 (get from Google Cloud Console > APIs & Services > Credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# RAG tuning (optional — defaults shown)
EMBED_MODEL=text-embedding-3-small
BATCH_SIZE=128
